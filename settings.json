{
    "window.titleBarStyle": "custom",
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": false,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "git.ignoreMissingGitWarning": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    // Editor Settings
    "editor.fontFamily": "'CaskaydiaCove Nerd Font Propo', 'Fira Code', 'Droid Sans Fallback', monospace",
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    "editor.bracketPairColorization.enabled": true,
    "editor.smoothScrolling": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 1.5,
    "editor.letterSpacing": 0.6,
    "editor.cursorBlinking": "expand",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "variable",
                    "keyword",
                    "storage",
                    "entity.name.function",
                    "entity.name.type",
                    "entity.other.attribute-name",
                    "string",
                    "constant",
                    "meta",
                    "meta.definition.variable.name",
                    "support",
                    "punctuation",
                    "markup"
                ],
                "settings": {
                    "fontStyle": "italic" // Everything italic
                }
            }
        ]
    },
    "editor.lineNumbers": "on",
    "workbench.editorAssociations": {
        "*.dat": "default"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": true,
    // Customizing the terminal
    "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font','Consolas', 'Courier New', monospace",
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.letterSpacing": 1.6,
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.fontWeight": 600,
    "terminal.integrated.fontWeightBold": 500,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyleInactive": "underline",
    "terminal.integrated.tabs.hideCondition": "singleGroup",
    // Colors configuration
    "workbench.colorCustomizations": {
        // Terminal Colors
        // "terminal.foreground": "#00fbfff1",
        "terminal.background": "#0e0d0db0",
        // "terminal.border": "#01f326",
        "terminal.ansiBrightRed": "#ff0000",
        "terminal.ansiBrightYellow": "#fdd700",
        "terminal.ansiGreen": "#00ff62f3",
        "terminalCursor.foreground": "#09e23f",
        // SideBar, TitleBar and Tabs Colors
        "sideBar.border": "#01f326",
        "sideBar.foreground": "#a69d9d",
        "scrollbarSlider.background": "#1b191973",
        "statusBar.border": "#01f326",
        "titleBar.border": "#01f326",
        "sideBarTitle.border": "#01f326",
        "sideBarTitle.foreground": "#01f326",
        "tab.activeForeground": "#ffffff",
        "tab.activeBorder": "#01f326",
        "sideBySideEditor.verticalBorder": "#01f326",
        "sideBySideEditor.horizontalBorder": "#01f326",
        "scrollbarSlider.hoverBackground": "#312d2d",
        "scrollbarSlider.activeBackground": "#312d2d",
        // Panel Colors 
        "panel.border": "#01f326",
        // "panelTitle.border": "#01f326",
        // "panel.background": "#000000",
        "panelTitle.activeForeground": "#01f325",
        "panelTitle.activeBorder": "#01f325",
        // Activity Bar
        "activityBar.border": "#01f325"
    },
    "workbench.iconTheme": "vscode-icons",
    // "workbench.editor.showTabs": "none",
    // "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "window.commandCenter": false,
    "workbench.colorTheme": "Dark Magic",
    "breadcrumbs.enabled": true,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    // "editor.colorDecorators": false,
    "files.readonlyInclude": { // Add the following to settings.json to mark Rust library sources as read-only:
        "**/.cargo/registry/src/**/*.rs": true,
        "**/.cargo/git/checkouts/**/*.rs": true,
        "**/lib/rustlib/src/rust/library/**/*.rs": true,
    },
    "grunt.autoDetect": "on",
    "window.menuBarVisibility": "compact",
    "workbench.activityBar.location": "hidden",
    "files.autoSave": "afterDelay",
}